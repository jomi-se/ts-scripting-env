{
  "name": "ts-scripting-env",
  "version": "1.0.0",
  "description": "Base NodeJS environment for TypeScript toy scripts with eslint and prettier",
  "main": "src/index.ts",
  "scripts": {
    "compile": "tsc",
    "run:script": "ts-node",
    "run:script:debug": "node -r ts-node/register --inspect-brk",
    "depcheck": "depcruise --validate .dependency-cruiser.js src"
  },
  "author": "Jose M Arroyo",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^2.1.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-typescript": "^4.0.1",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.13.7",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2"
  },
  "dependencies": {
    "dependency-cruiser": "8.3.0-beta-2",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  }
}
