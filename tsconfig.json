{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es7", "esnext.asynciterable", "dom", "es2017"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    },
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
